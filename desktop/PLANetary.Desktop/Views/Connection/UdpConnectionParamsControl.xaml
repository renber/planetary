<UserControl x:Class="PLANetary.Views.Connection.UdpConnectionParamsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLANetary.Views.Connection"
             mc:Ignorable="d" >
    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Margin="5 0">
        <TextBlock Text="Target IP: " VerticalAlignment="Center" />
        <TextBox Text="{Binding Host}"  MinWidth="120" Margin="5 0 0 0" />
        <TextBlock Text="Port: " VerticalAlignment="Center" Margin="10 0 0 0" />
        <TextBox Text="{Binding Port}"  MinWidth="120" Margin="5 0 0 0" />
    </StackPanel>
</UserControl>
